@model List<ConferenceManagementWebApp.Models.Conference>

@{
    ViewData["Title"] = "Conference List";
}

<h2>Conference List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var conference in Model)
        {
            <tr>
                <td>@conference.Title</td>
                <td>@conference.Description</td>
                <td>@conference.Venue</td>
                <td>@conference.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@conference.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <!-- Edit button -->
                    <a asp-controller="Conference" asp-action="Edit" asp-route-id="@conference.Id" class="btn btn-primary">Edit</a>
                    <!-- Delete button -->
                    <form asp-controller="Conference" asp-action="Delete" asp-route-id="@conference.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this conference?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>