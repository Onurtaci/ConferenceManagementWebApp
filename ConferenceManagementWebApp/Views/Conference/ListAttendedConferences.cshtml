@using ConferenceManagementWebApp.ViewModels.ConferenceViewModels;
@model List<ConferenceListViewModel>;

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/base.css">
<link rel="stylesheet" href="~/css/table.css">
<title>Attended Conferences</title>

<div class="container">
    <h1 class="upcoming-conferences-title">Attended Conferences</h1>
    <table class="conference-table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Organizer Name</th>
            <th>Sessions</th>
            <th>Give Feedback</th>
            <th>Disjoin</th>
        </tr>

        @foreach (var conference in Model)
        {
            <tr>
                <td>@conference.Title</td>
                <td>@conference.Description</td>
                <td>@conference.Venue</td>
                <td>@conference.StartDate</td>
                <td>@conference.EndDate</td>
                <td>@conference.OrganizerFullName</td>
                <td>
                    <button>
                        <a asp-controller="Session" asp-action="List" asp-route-conferenceId="@conference.Id">Sessions</a>
                    </button>
                </td>
                <td>
                    <button>
                        <a asp-controller="Feedback" asp-action="Create" asp-route-conferenceId="@conference.Id">Give Feedback</a>
                    </button>
                </td>
                <td>
                    <button class="disjoin">
                        <a asp-controller="Conference" asp-action="Disjoin" asp-route-conferenceId="@conference.Id">Disjoin</a>
                    </button>
                </td>
            </tr>
        }

    </table>
