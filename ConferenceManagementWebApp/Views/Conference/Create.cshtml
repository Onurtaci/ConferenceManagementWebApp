@using ConferenceManagementWebApp.ViewModels.ConferenceViewModels;

@model ConferenceCreateViewModel;

@{
    ViewData["Title"] = "Create";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-5 card p-4">
        <h2 class="text-center text-info">Create a new conference.</h2>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-1">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter conference name" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter conference description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Venue"></label>
                <input asp-for="Venue" class="form-control" placeholder="Enter conference location" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime" class="form-control" type="date" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="EndTime"></label>
                <input asp-for="EndTime" class="form-control" type="date" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <a asp-controller="Conference" asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-md float-end">Create</button>
                </div>
            </div> 
        </form>
    </div>
</div>