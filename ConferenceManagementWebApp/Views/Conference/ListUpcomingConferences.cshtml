@using ConferenceManagementWebApp.ViewModels.ConferenceViewModels;
@model List<ConferenceListViewModel>;

@{
    ViewData["Title"] = "List Upcoming Conferences";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/base.css">
<link rel="stylesheet" href="~/css/table.css">
<title>Upcoming Conferences</title>

<div class="container">
    <h1 class="upcoming-conferences-title">Upcoming Conferences</h1>
    <table class="conference-table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Organizer</th>
            <th>Sessions</th>
            <th>Join</th>
        </tr>

        @foreach (var conference in Model)
        {
            <tr>
                <td>@conference.Title</td>
                <td>@conference.Description</td>
                <td>@conference.Venue</td>
                <td>@conference.StartDate</td>
                <td>@conference.EndDate</td>
                <td>@conference.OrganizerFullName</td>
                <td>
                    <button class="sessionsButton">
                        <a asp-controller="Session" asp-action="List" asp-route-conferenceId="@conference.Id">Sessions</a>
                    </button>
                </td>
                <td>
                    <button class="sessionsButton">
                        <a asp-controller="Conference" asp-action="Join" asp-route-conferenceId="@conference.Id">Join</a>
                    </button>
                </td>
            </tr>
        }
    </table>
</div>
