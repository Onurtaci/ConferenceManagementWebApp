@using ConferenceManagementWebApp.ViewModels.FeedbackViewModels;
@model FeedbackCreateViewModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/base.css">
<link rel="stylesheet" href="~/css/paperOperations.css">
<title>Give Feedback</title>

<form asp-action="Create" method="post">
    <div class="review-box">
        <div class="review-header">
            <header>Give Feedback</header>
        </div>
        <div class="input-box">
            <label for="Score">Score</label>
            <input asp-for="Rating" class="input-field" placeholder="Score" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label for="Comment">Comment</label>
            <textarea asp-for="Comment" class="input-field" placeholder="Comment"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="input-submit">
            <button class="submit-btn" id="submitButton"></button>
            <label for="submitButton">Give Feedback</label>
        </div>
        <input hidden asp-for="ConferenceId" value="@Model.ConferenceId" />
        <input hidden asp-for="UserId" value="@Model.UserId" />
    </div>
</form>

