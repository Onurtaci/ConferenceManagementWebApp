@model ConferenceManagementWebApp.ViewModels.AccountViewModels.AccountRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/register.css">

<header class="header">
    <a asp-controller="Home" asp-action="Index" class="logo">Conferance Management System</a>
    <nav class="navbar">
        <a asp-controller="Account" asp-action="Login">Login</a>
        <a asp-controller="Account" asp-action="Register">Register</a>
    </nav>
</header>

<div class="" register-box">
    <div class="register-header">
        <header>Create An Account</header>
    </div>

    <div class="input-box">
        <input asp-for="FirstName" class="input-field" placeholder="First Name" />
    </div>
    <div class="input-box">
        <input asp-for="LastName" class="input-field" placeholder="Last Name" />
    </div>
</div>
