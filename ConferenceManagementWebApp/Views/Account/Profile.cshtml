@using ConferenceManagementWebApp.ViewModels.AccountViewModels;
@model AccountProfileViewModel;

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/base.css">
<link rel="stylesheet" href="~/css/table.css">
<title>Profile</title>

<div class="container">
    <h1>Profile</h1>
    <table class="conference-table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>

        <tr>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.UserName</td>
            <td>
                <button><a asp-controller="Account" asp-action="EditProfile" asp-route-id="@Model.Id">Edit</a></button>
            </td>
        </tr>
    </table>